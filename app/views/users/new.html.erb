<h1>New User Registration</h1>

<%= form_for(@user) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <br>

  <%= f.label :username %>
  <%= f.email_field :username %>

  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <br>

  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <br>
  <br>

  <%= f.submit "Register" %>

<% end %>