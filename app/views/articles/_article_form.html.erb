<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(@article) do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :body, 'Article Body' %>
        <%= f.text_area :body, class: 'form-control editable', size: "60x20" %>
        
        <p class="help-block"><span class="label label-info">tip</span> Format your article with markdown, <%= link_to 'learn more!', 'https://daringfireball.net/projects/markdown/', target: 'blank' %></p>
      </div>

      <%= f.submit submit_label, class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>