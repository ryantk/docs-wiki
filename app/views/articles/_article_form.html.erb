<%= form_for(@article) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, 'Article Body' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.submit submit_label, class: 'btn btn-default' %>

<% end %>