<%= render partial: 'flash_messages', locals: { errors: @article.errors.full_messages } %>

<ol class="breadcrumb">
  <li><%= link_to 'Articles', :back %></li>
  <li class="active"><%= @article.title %></li>
</ol>

<div class="panel panel-default article">
  <div class="panel-heading">
    <h3 class="panel-title"><h1><%= @article.title %></h1></h3>
  </div>
  <div class="panel-body">
    <div id="article-body-formatted">
      <%= format_markdown @article.body %>
    </div>
  </div>
</div>

<% if @article.author == current_user %>
  <div class="panel panel-default">
    <div class="panel-heading">
      Actions
    </div>
    <div class="panel-body">
      <%= link_to('Edit', edit_article_path(@article), class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>